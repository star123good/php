                    <div class="inner-box category-content">
                        <h2 class="title-2"><i class="icon-user-add"></i> [#lang_create_your_account] </h2>

                        <div class="row">
                            <div class="col-sm-12">
								[@results]
                                <form class="form-horizontal" action="" method="POST">
                                    <fieldset>

                                        <!-- Text input-->
                                        <div class="form-group required">
                                            <label class="col-md-4 control-label">[#lang_field_5]</label>
                                            <div class="col-md-6">
                                                <input name="firstname" placeholder="[#lang_field_5]" class="form-control input-md" required="" type="text">
                                            </div>
                                        </div>

                                        <!-- Text input-->
                                        <div class="form-group required">
                                            <label class="col-md-4 control-label">[#lang_field_6]</label>
                                            <div class="col-md-6">
                                                <input name="lastname" placeholder="[#lang_field_6]" class="form-control input-md" type="text">
                                            </div>
                                        </div>
										<div class="form-group required">
                                            <label class="col-md-4 control-label">[#lang_field_21]</label>
                                            <div class="col-md-6">
                                                <input name="username" placeholder="[#lang_field_21]" class="form-control input-md" type="text">
                                            </div>
                                        </div>

                                        <div class="form-group required">
                                            <label for="inputEmail3" class="col-md-4 control-label">[#lang_field_7]</label>
                                            <div class="col-md-6">
                                                <input type="email" name="email" class="form-control" id="inputEmail3" placeholder="[#lang_field_7]">
                                            </div>
                                        </div>
										
                                        <div class="form-group required">
                                            <label for="inputPassword3" class="col-md-4 control-label">[#lang_field_17] </label>
                                            <div class="col-md-6">
                                                <input type="password" name="password" class="form-control" id="inputPassword3" placeholder="[#lang_field_17]">
                                            </div>
                                        </div>
										
										<div class="form-group required">
                                            <label for="inputPassword3" class="col-md-4 control-label">[#lang_field_22] </label>
                                            <div class="col-md-6">
                                                <input type="password" name="cpassword" class="form-control" id="inputPassword3" placeholder="[#lang_field_22]">
                                            </div>
                                        </div>
										
                                        <div class="form-group">
                                            <label class="col-md-4 control-label"></label>

