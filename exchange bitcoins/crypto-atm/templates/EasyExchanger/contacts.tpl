<div class="main-container">
        <div class="container">
            <div class="row clearfix">
                <div class="col-md-12">
                    <div class="contact-form">
                        <h5 class="list-title gray"><strong>[#lang_contact_us]</strong></h5>

						[@results] 
                        <form class="form-horizontal" action="" method="POST">
                            <fieldset>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <input id="firstname" name="fname" type="text" placeholder="[#lang_field_5]" class="form-control">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <input id="lastname" name="lname" type="text" placeholder="[#lang_field_6]" class="form-control">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <input id="subject" name="subject" type="text" placeholder="[#lang_field_20]" class="form-control">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <input id="email" name="email" type="text" placeholder="[#lang_field_7]" class="form-control">
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <textarea class="form-control" id="message" name="message" placeholder="[#lang_placeholder_4]" rows="7"></textarea>
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <div class="col-md-12 ">
                                                <button type="submit" class="btn btn-primary btn-lg" name="eex_submit">[#lang_btn_19]</button>
                                            </div>
                                        </div>


                                    </div>

                                </div>


                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.main-container -->
